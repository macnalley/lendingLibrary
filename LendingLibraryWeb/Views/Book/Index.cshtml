@using LendingLibraryWeb.Data.Entities;

@model IEnumerable<BookModel>

@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

<div class="container">
    @foreach (var book in Model)
    {
        <a asp-controller="Book" asp-action="Details">
            <div class="card text-center">
                <h2>@book.Title</h2>
                <p>by @book.Author</p>
                <img src=@book.CoverUrl />
                @if (book.IsAvailable == true)
                {
                    <p>Available</p>
                }
                else 
                {
                    <p>Not Available</p>
                }
            </div>
        </a>
    }
</div>